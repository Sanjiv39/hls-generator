{
  "name": "node-ffmpeg-gen",
  "version": "1.0.0",
  "description": "Generates HLS files with ffmpeg",
  "main": "index.js",
  "type": "module",
  "directories": {
    "test": "test",
    "dev": "ts-node src/index.ts"
  },
  "scripts": {
    "test": "node --loader ts-node/esm",
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "dev-test": "nodemon -- ",
    "dev-input": "nodemon src/index.ts",
    "dev-output": "nodemon src/output.ts",
    "get-metadata": "npm run build && node dist/index.js"
  },
  "author": "Sanjiv39",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.5.0",
    "fluent-ffmpeg": "^2.1.3",
    "fs": "^0.0.1-security",
    "m3u8-parser": "^7.2.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/m3u8-parser": "^7.2.0",
    "@types/node": "^22.14.1",
    "nodemon": "^3.1.9",
    "typescript": "^5.8.3"
  }
}
